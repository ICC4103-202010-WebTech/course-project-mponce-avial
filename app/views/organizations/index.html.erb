<head>
  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>

<body>
<h2 class="text-center">USER ORGANIZATIONS</h2>
<p style="margin-block-end: 30px"></p>
<div class ="container">
  <div class = "row">
    <div class="col border-right">
      <h2>Organizations created</h2>

      <%@organizations_created.each do |org| %>

        <div class="card shadow-sm">
          <% if org.bannerOrg.attached? %>
            <%= link_to image_tag(org.bannerOrg, class: "card-img-top",height: "200px", width: "40px", background: "#55595c", color: "#eceeef"), url_for(org) %>
          <% else%>
            <%= link_to image_tag("placeholder-banner.svg", class: "card-img-top", height: "200px",width: "40px", background: "#55595c", color: "#eceeef"), url_for(org) %>
          <% end %>
          <div class="card-body">
            <p class="card-text"><%= link_to org.name, org %></p>
            <p class="card-text"><%= org.description %></p>
            <div class="d-flex justify-content-between align-items-center">
              <div class="btn-group">
                <button type="button" class="btn btn-sm btn-outline-secondary"><%= link_to "View", org %></button>
                <button type="button" class="btn btn-sm btn-outline-secondary"><%= link_to "Edit", edit_organization_path(org) %></button>
              </div>
            </div>
          </div>
        </div>

      <% end %>
    </div>

    <div class="col">
      <h2>Events joined</h2>

      <%@organizations_joined.each do |org| %>

          <span class="card shadow-sm">
            <% if org.bannerOrg.attached? %>
              <%= link_to image_tag(org.bannerOrg, class: "card-img-top", height: "200px",width: "40px", background: "#55595c", color: "#eceeef"), url_for(org) %>
            <% else%>
              <%= link_to image_tag("placeholder-banner.svg", class: "card-img-top", height: "200px",width: "40px", background: "#55595c", color: "#eceeef"), url_for(org) %>
            <% end %>
            <div class="card-body">
              <p class="card-text"><%= link_to org.name, org %></p>
              <p class="card-text"><%= org.description %></p>
              <div class="d-flex justify-content-between align-items-center">
                <div class="btn-group">
                  <button type="button" class="btn btn-sm btn-outline-secondary"><%= link_to "View", org %></button>
                </div>
              </div>
            </div>
          </span>

      <% end %>
    </div>
  </div>
</div>
</body>