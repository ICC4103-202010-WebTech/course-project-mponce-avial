<%= stylesheet_link_tag "user_profile" %>
<head>
  <div class="user_banner">
    <img
        class="avatar"
      src="https://www.bsn.eu/wp-content/uploads/2016/12/user-icon-image-placeholder-300-grey.jpg">
    <h3 class="user_name"><%=@user_profile.registered_user.name%></h3>
    <h3 class="user_name"><%=@user_profile.registered_user.last_name%></h3>
  </div>
</head>

<body>
  <div>
    <h3>Biography:</h3>
    <div class="biography">
      <h3><%=@user_profile.biography%></h3>
    </div>
  </div>
  <hr>
</body>

<h2>Events created</h2>
<table>
  <tr>
    <th>ID</th>
    <th>Event Name</th>
  </tr>

  <%@user_events_created.each do |event| %>
    <tr>
      <td><%=event.id %></td>
      <td><%= link_to event.title, controller: "events", action: "show", id: event.id%></td>
    </tr>
  <% end %>
</table>

<h2>Events joined</h2>
<table>
  <tr>
    <th>ID</th>
    <th>Event Name</th>
  </tr>

  <%@user_events_joined.each do |event| %>
    <tr>
      <td><%=event.id %></td>
      <td><%= link_to event.title, controller: "events", action: "show", id: event.id%></td>
    </tr>
  <% end %>
</table>
