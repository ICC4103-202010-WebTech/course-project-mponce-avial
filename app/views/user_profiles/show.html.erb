<p id="notice"><%= notice %></p>
<h1> User Profile </h1>
<ul>
  <li><b>Name:</b> <%=@user_profile.registered_user.name%></li>
  <li><b>Lastname:</b> <%=@user_profile.registered_user.last_name%></li>
  <li><b>Username:</b> <%=@user_profile.registered_user.username%></li>
  <li><b>Biography:</b> <%=@user_profile.biography%></li>
  <li><b>E-mail:</b> <%=@user_profile.registered_user.email_address%></li>
  <li><b>Location:</b> <%=@user_profile.registered_user.location%></li>
  <li><b>Profile Picture:</b> <%=@user_profile.profile_picture%></li>
  <li><b>Banner Picture:</b> <%=@user_profile.banner_picture%></li>
</ul>

<h2>Events created</h2>
<table>
  <tr>
    <th>ID</th>
    <th>Event Name</th>
  </tr>

  <%@user_events_created.each do |event| %>
    <tr>
      <td><%=event.id %></td>
      <td><%= link_to event.title, controller: "events", action: "show", id: event.id%></td>
    </tr>
  <% end %>
</table>

<h2>Events joined</h2>
<table>
  <tr>
    <th>ID</th>
    <th>Event Name</th>
  </tr>

  <%@user_events_joined.each do |event| %>
    <tr>
      <td><%=event.id %></td>
      <td><%= link_to event.title, controller: "events", action: "show", id: event.id%></td>
    </tr>
  <% end %>
</table>
