<div class="row ml-0 mt-3">
  <h2>Edit User Profile</h2>
</div>
<div class="row ml-0 mt-2">
  <p>Please enter the required information to edit the User Profile:</p>
</div>
<div class="row ml-0">
  <%= form_with model: @user_profile do |form| %>

    <div class="form-group">
      <%= form.label :name %>
      <%= form.text_field :name, :value => @registered_user.name, class: "form-control"  %>
    </div>
    <div class="form-group">
      <%= form.label :last_name %>
      <%= form.text_field :last_name, :value => @registered_user.last_name, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= form.label :location %>
      <%= form.text_field :location, :value => @registered_user.location, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= form.label :biography %>
      <%= form.text_area :biography, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= form.label :banner %>
      <%= form.file_field :bannerProfile%>
    </div>
    <div class="form-group">
      <%= form.submit "Edit", class: ["btn", "btn-primary"] %>
      <%= link_to "Back", :back, class: ["btn", "btn-secondary"] %>
    </div>
  <% end %>
</div>
