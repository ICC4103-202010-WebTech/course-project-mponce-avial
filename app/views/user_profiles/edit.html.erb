<div class="row ml-0 mt-3">
  <h2>Edit User Profile</h2>
</div>
<div class="row ml-0 mt-2">
  <p>Please enter the required information to edit the Event:</p>
</div>
<div class="row ml-0">
  <%= form_with model: @user_profile do |form| %>
    <div class="form-group">
      <%= form.label :name %>
      <%= form.text_field :@user.name, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= form.label :biography %>
      <%= form.text_field :biography, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= form.label :location %>
      <%= form.text_field :location %>
    </div>

    <div class="form-group">
      <%= form.submit "Edit", class: ["btn", "btn-primary"] %>
      <%= link_to "Back", :back, class: ["btn", "btn-secondary"] %>
    </div>
  <% end %>
</div>
