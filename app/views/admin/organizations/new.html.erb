<div class="row ml-0 mt-3">
  <h2>New Organization</h2>
</div>
<div class="row ml-0 mt-2">
  <p>Please enter the required information to create a New Organization:</p>
</div>
<div class="row ml-0">
  <%= form_with url: admin_organizations_path, method: :post do |form| %>

    <%= form.hidden_field :organization_admin_id, :value =>1%>

    <div class="form-group">
      <%= form.label :name %>
      <%= form.text_field :name, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= form.label :description %>
      <%= form.text_area :description, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= form.label :banner %>
      <%= form.file_field :bannerOrg%>
    </div>
    <div class="form-group">
      <%= form.submit "Create", class: ["btn", "btn-primary"] %>
      <%= link_to "Back", :back, class: ["btn", "btn-secondary"] %>
    </div>
  <% end %>
</div>
