<head>
  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  <link href="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
  <script src="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
  <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
</head>

<%= stylesheet_link_tag "organization" %>
<head>
  <% if @organization.bannerOrg.attached? %>
  <div>
    <h1><%=@organization.name%></h1>
    <%= image_tag(@organization.bannerOrg, class: "org_banner")%>
  </div>
  <% else %>
    <h1><%=@organization.name%></h1>
  <div class="org_banner">
  </div>
  <% end %>
</head>
<div class="edit_organization">
  <%= link_to "Members", admin_members_path(:organization => @organization),class: ["btn", "btn-primary", "mr-4"] %>
  <%= link_to "Edit Organization",edit_admin_organization_path(:organization_id => @organization.id),class: ["btn", "btn-primary", "mr-4"] %>
</div>
<div>
  <%= button_to 'Destroy', admin_organization_path, method: :delete, class: ["btn", "btn-danger", "mr-4"]%>
</div>
<h2>Events</h2>
<hr>

<body>
<div class ="container">
  <div class = "row">
    <div class="col border-right">
      <%@organization_events.each do |event| %>
        <div class="card shadow-sm">
          <% if event.bannerEvent.attached? %>
            <%= link_to image_tag(event.bannerEvent, class: "card-img-top",height: "200px", width: "40px", background: "#55595c", color: "#eceeef"), controller: "events", action: "show", id: event.id %>
          <% else%>
            <%= link_to image_tag("placeholder-banner.svg", class: "card-img-top", height: "200px",width: "40px", background: "#55595c", color: "#eceeef"),  controller: "events", action: "show", id: event.id %>
          <% end %>
          <div class="card-body">
            <p class="card-text"><%= link_to event.title, event %></p>
            <p class="card-text"><%= event.location %></p>
            <p class="card-text"><%= event.final_date %></p>
            <div class="d-flex justify-content-between align-items-center">

            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
</body>