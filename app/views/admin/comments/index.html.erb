<head>
  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>

  <style>
    table, th, td {
      border: 1px solid black;
    }
  </style>
</head>

<h2>COMMENTS</h2>

<div class="row ml-0 mt-2 mb-3">
  <%= button_to 'Create Comment', new_admin_comment_path, method: :get, class: ["btn", "btn-primary"]%>
</div>

<table>
  <tr>
    <th>ID</th>
    <th>Text</th>
    <th>User</th>
    <th>Event</th>
  </tr>

  <%@comments.each do |c| %>
    <tr>
      <td><%=c.id %></td>
      <td><%= link_to c.text, controller: "comments", action: "show", id: c.id%></td>
      <td><%=@users.find(c.registered_user_id).name + " " + @users.find(c.registered_user_id).last_name%></td>
      <td><%=link_to @events.find(c.event.id).title, controller: "events", action: "show", id: c.event.id%></td>
    </tr>
  <% end %>
</table>
